
<div id="signup_form">

  <% @user.password = @user.password_confirmation = nil if @user %>
	<% form_for @user do |f| -%>

  <div class="registration_section registration_details">  	
  
    <h3 class="as_h1">... create your account!</h3>
    
    <%= f.error_messages %>

  	<p><label for="name">Display Name (Displayed to other users)</label><br/>
  	<%= f.text_field :name %></p>

  	<p><label for="email">Email Address</label><br/>
  	<%= f.text_field :email %></p>

  	<p><label for="password">Password</label><br/>
  	<%= f.password_field :password %></p>

  	<p><label for="password_confirmation">Confirm Password</label><br/>
  	<%= f.password_field :password_confirmation %></p>

  	<p><%= submit_tag 'Sign up', :id => 'registration_submit' %></p>
  </div>	

	<% end -%>

</div>
